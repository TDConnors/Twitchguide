@model IEnumerable<TwitchGuide.Models.Timeblock>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Timeblock", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EndHour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartHour):00 - @Html.DisplayFor(modelItem => item.EndHour):00
        </td>
        <td>
            @Html.ActionLink("Remove Timeblock", "Delete", new { id = item.Index })
        </td>
    </tr>
}

</table>
